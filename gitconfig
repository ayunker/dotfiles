[user]
  name = Tony Yunker
  email = tony.yunker@gmail.com

[color]
  ui = auto
  interactive = true
  status = true
  branch = true
  diff = true

[core]
  editor = nvim
  excludesfile = ~/.gitignore_global
  pager = "diff-so-fancy | less --tabs=4 -RFX"

[rebase]
  autosquash = true
  autoStash = true

[merge]
  ff = only

[pull]
  rebase = true

[push]
  default = simple
  autoSetupRemote = true
  followTags = true

[init]
  defaultBranch = main

[tag]
  sort = version:refname

[diff]
  algorithm = histogram
  colorMoved = plain
  renames = true

[alias]
  aliases=!git config -l | grep '^alias' | cut -c 7- | sort
  ap = add -p
  b = branch
  cheddar = commit --amend -CHEAD
  ci = commit --verbose
  co = checkout
  cob = checkout -b
  dc = diff --cached
  doff = reset HEAD^
  mup = "!git checkout master && git pull && git checkout -"
  please = push --force-with-lease
  ra = rebase --abort
  rc = rebase --continue
  ri = rebase -i
  rs = rebase --skip
  st = status -sb
  todo = "!git --no-pager diff -U0 main | rg 'TODO|debugger|puts|console|\\.only' | sed 's/^+//' | git --no-pager grep -nFf - 2> /dev/null"
  uncommit = reset --soft HEAD^
  unstage = reset
  wip = "!git add . && git commit -m 'wip'"

  changes = log --pretty=format:\"%h %cr %cn %Cgreen%s%Creset\" --name-status -25
  ch = log --pretty=format:\"%C(yellow)%h %Cblue%>(12,trunc)%ad %Cgreen%<(15,trunc)%aN%Cred%d %Creset%s\" --date=relative

[credential "https://github.com"]
	helper = 
	helper = !/opt/homebrew/bin/gh auth git-credential
[credential "https://gist.github.com"]
	helper = 
	helper = !/opt/homebrew/bin/gh auth git-credential
