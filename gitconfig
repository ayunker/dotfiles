[user]
  name = Tony Yunker
  email = tony.yunker@gmail.com

[color]
  ui = auto
  interactive = true
  status = true
  branch = true
  diff = true

[core]
  editor = vim
	excludesfile = ~/.gitignore_global

[pull]
  rebase = false

[alias]
  st = status -sb
  co = checkout
  cob = checkout -b
  aa = add --all
  ap = add -p
  dc = diff --cached
  b = branch
  ci = commit --verbose
  rbc = rebase --continue
  rs = rebase --skip
  unstage = reset
  uncommit = reset --soft HEAD^
  mup = "!git checkout master && git pull && git checkout -"
  ps = "!git push origin staging && git push staging staging:master"

  changes = log --pretty=format:\"%h %cr %cn %Cgreen%s%Creset\" --name-status -25

#  ch = log --pretty=format:\"%C(yellow)%h %Cblue%>(12)%ad %Cgreen%<(20)%aN%Cred%d %Creset%s\" --date=short
  ch = log --pretty=format:\"%C(yellow)%h %Cblue%>(12,trunc)%ad %Cgreen%<(15,trunc)%aN%Cred%d %Creset%s\" --date=relative

